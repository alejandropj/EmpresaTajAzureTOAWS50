@model EmpresaTajAzure.Models.UsuarioEmpresa

@{
    Layout = "_LayoutInicio";
}

@if (Model != null)
{
    <div class="bg-white overflow-hidden shadow rounded-lg border mt-4">
        <div class="px-1 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Tus datos,  @Model.Nombre
            </h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
            <dl class="sm:divide-y sm:divide-gray-200">
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Nombre
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Model.Nombre
                    </dd>
                </div>
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Correo
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Model.Email
                    </dd>
                </div>
                <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">
                        Linkedin
                    </dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        @Model.Linkedin
                    </dd>
                </div>
            </dl>
        </div>
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Sus empresas
            </h3>
        </div>
        
    </div>
}
else
{
    <h2>No se encontró el usuario.</h2>
}
