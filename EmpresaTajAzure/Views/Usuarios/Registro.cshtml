<h1 class="text-2xl font-semibold mb-4">Registro de Usuario</h1>

<form method="post" class="space-y-4">
    <label for="email" class="block font-medium">Email:</label>
    <input type="text" id="email" name="email" readonly value="@UserManager.GetUserName(User)" class="w-full p-2 border rounded-md" />

    <label for="idClase" class="block font-medium">ID de Clase:</label>
    <input type="number" id="idClase" name="idClase" required class="w-full p-2 border rounded-md" />

    <label for="nombre" class="block font-medium">Nombre:</label>
    <input type="text" id="nombre" name="nombre" required class="w-full p-2 border rounded-md" />

    <label for="linkedin" class="block font-medium">LinkedIn:</label>
    <input type="text" id="linkedin" name="linkedin" required class="w-full p-2 border rounded-md" />

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Ingresar datos</button>
</form>